            </ResourceDictionary.MergedDictionaries>
            <x:Double x:Key="AppNameTitle">18</x:Double>
            <SolidColorBrush x:Key="MainFonBrush" Color="#FF0951EC"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
